import React, {useState} from "react";
import {useBooksContext} from "../contexts/bookscontext";
import {Form, Button} from "react-bootstrap";

export function Filter(props) {
    const {fetchGET} = useBooksContext();
    const [inputs, setInputs] = useState([]);
    const handleSubmit = (event) => {
        event.preventDefault();

        fetchGET();
    }


    return <>
        <Form onSubmit={e => handleSubmit(e)}>
            <Form.Control type="number" value={inputs.min} onChange={e => setInputs([...inputs, 'min':e.target.value])}/>
            <Form.Control type="number" value={inputs.max} onChange={e => setInputs([...inputs, 'max':e.target.value])}/>
            <Button variant="primary" type="submit">Search</Button>
        </Form></>
}